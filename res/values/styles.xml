<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="style_items_text_about">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_marginLeft">@dimen/tab_content_about_game_info_padding</item>
        <item name="android:drawablePadding">80dp</item>
        <item name="android:textColor">@color/main_blue</item>
        <!--<item name="android:textSize">@dimen/tab_content_about_game_info_text_size</item>-->
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="style_images_options">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="style_top_tabs">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/tabs_layout_height</item>
        <item name="android:paddingLeft">@dimen/frame_top_left_margin</item>
    </style>
</resources>