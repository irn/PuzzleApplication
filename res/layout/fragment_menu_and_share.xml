<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="5dip"
        android:background="@color/main_background"
        >

    <View
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="1px"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="@dimen/main_padding_right"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_facebook"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@id/share_twitter_button"
                    android:id="@+id/share_facebook_button"
                    />

            <ImageButton
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_twitter"
                    android:id="@id/share_twitter_button"
                    />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@color/main_blue"
            android:text="EDIT PROFILE"
            android:padding="5dip"
            android:textSize="12dip"
            android:layout_gravity="right"
            android:layout_marginTop="5dip"
            android:id="@+id/edit_profile_text_view"
            android:clickable="true"
            android:visibility="invisible"
            />

    </LinearLayout>


</LinearLayout>