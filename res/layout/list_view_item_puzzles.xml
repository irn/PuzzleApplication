<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/tabs_item_layout_padding"
        android:background="@color/main_background"
        >

    <TextView
            android:layout_width="0px"
            android:layout_weight="0.40"
            android:layout_height="wrap_content"
            android:id="@+id/name_text_view"
            android:background="@android:color/darker_gray"
            android:textSize="@dimen/username_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="@dimen/tabs_item_text_view_padding"
            />


    <TextView
            android:layout_width="0px"
            android:layout_weight="0.40"
            android:layout_height="wrap_content"
            android:id="@+id/last_played_text_view"
            android:gravity="center"
            android:textSize="@dimen/username_text_size"
            android:padding="@dimen/tabs_item_text_view_padding"
            />


    <TextView
            android:layout_width="0px"
            android:layout_weight="0.20"
            android:layout_height="wrap_content"
            android:id="@+id/autosolve_text_view"
            android:gravity="center"
            android:textSize="@dimen/username_text_size"
            android:padding="@dimen/tabs_item_text_view_padding"
            />

</LinearLayout>