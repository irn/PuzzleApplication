<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip"
        android:background="@color/main_background"
        >

    <TextView
            android:background="@drawable/borders_background"
            android:text="999.999.999"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/credits_value_text_size"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:id="@+id/credits_text_view"
            />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dip"
            >

        <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="0.5"
                />

        <ImageButton
                android:background="@android:color/transparent"
                android:src="@drawable/add_e_credits_active"
                android:layout_width="@dimen/buy_more_credits_button_size"
                android:layout_height="@dimen/buy_more_credits_button_size"
                android:scaleType="fitCenter"
                android:id="@+id/buy_paid_credits_button"
                />

        <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="0.1"
                />

        <ImageButton
                android:background="@android:color/transparent"
                android:src="@drawable/add_reward_credits_inactive"
                android:layout_width="@dimen/buy_more_credits_button_size"
                android:layout_height="@dimen/buy_more_credits_button_size"
                android:scaleType="fitCenter"
                android:id="@+id/buy_free_credits_button"
                />

        <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="0.5"
                />

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:id="@+id/user_name_text_view"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="@dimen/username_text_size"
            />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="0.5"
            />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/main_green"
                android:id="@+id/friends_online_text_view"
                android:text="(11)"
                android:textSize="@dimen/username_text_size"
                />

        <ImageView
                android:layout_marginTop="5dip"
                android:layout_width="@dimen/username_letter_size"
                android:layout_height="@dimen/username_letter_size"
                android:background="@color/main_green"
                />


        <View
                android:layout_width="7dip"
                android:layout_height="1px"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/main_blue"
                android:id="@+id/messages_text_view"
                android:text="(2)"
                android:textSize="@dimen/username_text_size"
                />


        <ImageView
                android:layout_marginTop="5dip"
                android:layout_width="@dimen/username_letter_size"
                android:layout_height="@dimen/username_letter_size"
                android:background="@color/main_blue"
                />

        <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:layout_weight="0.5"
                />

    </LinearLayout>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:id="@+id/avatar_image_view"
            android:src="@drawable/avatar"
            />

</LinearLayout>