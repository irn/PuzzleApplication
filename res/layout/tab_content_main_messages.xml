<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        >

    <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gadgetfreak0231"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_blue"
                android:padding="5dip"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gadgetfreak0232"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_blue"
                android:padding="5dip"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="gadgetfreak0233"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_blue"
                android:padding="5dip"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:orientation="vertical"
            >

        <LinearLayout
                android:layout_height="0px"
                android:layout_width="fill_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="10dip"
                >

            <TextView
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_blue"
                    android:text="Hi, how are you?"
                    />

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:textColor="@color/puzzle_name"
                        />

                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="14.25.00 01.11.2012"
                        android:gravity="right"
                        android:textColor="@color/puzzle_name"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dip"
                    >

                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="gadgetfreak0231"
                        android:textColor="@color/puzzle_name"
                        />

                <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="14.24.25 01.11.2012"
                        android:gravity="right"
                        android:textColor="@color/puzzle_name"
                        />
            </LinearLayout>



            <TextView
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_blue"
                    android:text="I'm fine..."
                    />


        </LinearLayout>

        <LinearLayout
                android:layout_height="0px"
                android:layout_width="fill_parent"
                android:layout_weight="0.3"
                android:padding="5dip"
                >

            <EditText
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:singleLine="true"
                    android:layout_weight="1"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="SEND"
                    android:gravity="center"
                    android:background="@color/main_blue"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="4dip"
                    android:layout_gravity="center_vertical"
                    />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>