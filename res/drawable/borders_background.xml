<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF34699D"/>

            <padding
                    android:bottom="2dip"
                    android:left="2dip"
                    android:right="2dip"
                    android:top="2dip"/>

            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                    android:bottom="5dp"
                    android:left="15dp"
                    android:right="15dp"
                    android:top="5dp"/>

            <solid android:color="@color/main_background"/>
        </shape>
    </item>
</layer-list>